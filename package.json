{
  "name": "videojs-ima",
  "version": "1.0.0",
  "license": "Apache-2.0",
  "main": "./dist/videojs.ima.js",
  "author": {
    "name": "Google Inc."
  },
  "engines": {
    "node": ">=0.8.0"
  },
  "scripts": {
    "contBuildDev": "watch 'npm run rollupDev' src",
    "contBuildProd": "watch 'npm run rollupProd' src",
    "devServer": "forever start ./node_modules/http-server/bin/http-server && npm run contBuildDev",
    "postdevServer": "forever stop ./node_modules/http-server/bin/http-server",
    "lint": "jshint src/**.js",
    "prodServer": "forever start ./node_modules/http-server/bin/http-server && npm run contBuildProd",
    "postprodServer": "forever stop ./node_modules/http-server/bin/http-server",
    "rollupDev": "rollup -c build/rollup.config.dev.js",
    "rollupProd": "rollup -c build/rollup.config.prod.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/googleads/videojs-ima"
  },
  "dependencies": {
    "videojs-contrib-ads": "~5.1.0"
  },
  "devDependencies": {
    "forever": "^0.15.3",
    "http-server": "^0.10.0",
    "jshint": "^2.9.5",
    "rollup": "^0.51.8",
    "rollup-plugin-copy": "^0.2.3",
    "rollup-plugin-json": "^2.3.0",
    "rollup-plugin-uglify": "^2.0.1",
    "uglify-es": "^3.1.10",
    "videojs-doc-generator": "^0.0.1",
    "watch": "^1.0.2"
  },
  "peerDependencies": {
    "video.js": ">=5.19.2"
  }
}
